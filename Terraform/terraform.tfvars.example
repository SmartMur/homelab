# Proxmox API Configuration
proxmox_api_url      = "https://192.168.100.100:8006/api2/json"
proxmox_token_id     = "terraform@pam!terraform"
proxmox_token_secret = "your-api-token-secret-here"
proxmox_tls_insecure = true

# Proxmox Cluster Configuration
proxmox_nodes      = ["alpha", "pve"]
proxmox_storage    = "local-lvm"
proxmox_storage_iso = "local"

# VM Template (must be cloud-init enabled)
vm_template_id = 9000

# VM Sizing
vm_count      = 2
vm_cpu        = 4
vm_memory     = 4096
vm_disk_size  = 50

# Network Configuration
vm_bridge      = "vmbr0"
vm_vlan_tag    = 0
vm_ip_type     = "dhcp"  # or "static"
vm_ip_subnet   = "192.168.1.0/24"
vm_ip_gateway  = "192.168.1.1"
vm_dns_servers = ["8.8.8.8", "8.8.4.4"]

# SSH Configuration
vm_ssh_public_key = "ssh-rsa  murray@macbook"

# System Configuration
vm_timezone = "UTC"

# Docker Configuration
docker_registry_mirror = ""  # Optional: e.g., "https://mirror.smartmur.lab"

# GitHub Repository Configuration
github_repo_url    = "https://github.com/sugarayhkins/homemedia.git"
github_repo_branch = "main"
arr_compose_path   = "docker-compose.yml"

# Storage Paths
arr_storage_path = "/srv/media"
arr_config_path  = "/srv/config"

# HA Configuration
enable_ha = true
ha_group  = "arr-stack"

# Tags
tags = ["arr-stack", "ha", "docker"]
