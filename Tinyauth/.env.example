# Tinyauth Environment Variables
# Copy this file to .env and fill in your actual values

# Secret - Generate with: openssl rand -base64 32 | tr -dc 'a-zA-Z0-9' | head -c 32
SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand

# Users in format user:bcrypt_hash (comma separated)
# Generate hash with: docker run -it ghcr.io/steveiliop56/tinyauth:v3 hash-password "yourpassword"
USERS=alice:CHANGE_ME_bcrypt_hash_here,bob:CHANGE_ME_bcrypt_hash_here

# OAuth Whitelist (important for security - only allow specific emails)
OAUTH_WHITELIST=info@smartmur.lab,another@email.com

# GitHub OAuth (get from: https://github.com/settings/developers)
GITHUB_CLIENT_ID=CHANGE_ME_github_client_id
GITHUB_CLIENT_SECRET=CHANGE_ME_github_client_secret

# Public App URL
PUBLIC_APP_URL=https://auth.smartmur.lab

# Trust Proxy (set to true if behind reverse proxy)
TRUST_PROXY=true

# MaxMind License Key (optional - for geolocation)
MAXMIND_LICENSE_KEY=

# User/Group IDs
PUID=1000
PGID=1000
