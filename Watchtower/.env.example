# Watchtower Environment Variables
# Copy this file to .env and fill in your actual values

# HTTP API Token - Generate with: openssl rand -base64 32
WATCHTOWER_HTTP_API_TOKEN=CHANGE_ME_GENERATE_WITH_openssl_rand_base64_32

# Notification Settings (optional)
# WATCHTOWER_NOTIFICATION_URL=
# WATCHTOWER_NOTIFICATION_EMAIL_FROM=watchtower@smartmur.lab
# WATCHTOWER_NOTIFICATION_EMAIL_TO=admin@smartmur.lab

# Schedule (cron format)
WATCHTOWER_SCHEDULE=0 0 4 * * *

# Timezone
TZ=UTC
